{
    "compilerOptions": {
      "target": "es2017",
      "module": "es2015",
      "moduleResolution": "node",
      "lib": ["es2015", "es2016", "es2017", "dom"],
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "resolveJsonModule": true,
      "declaration": true,
      "outDir": "./lib",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noUnusedLocals": true, 
      "skipLibCheck": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "pretty": true,
      "stripInternal": true,
      "types": ["node"]
    },
    "compileOnSave": true,
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "bin",
      "demo_usage",
      "node_modules"
    ]
  }